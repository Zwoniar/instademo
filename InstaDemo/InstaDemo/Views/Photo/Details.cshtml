@model InstaDemo.ViewModels.PhotoDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <div class="col-md-12">
                
                <img src="/Image/@Model.Id" alt="@Model.Title"/>
            </div>
        </div>
        
        <div class="form-group">
            <label asp-for="Title" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <p class="form-control-static">@Model.Title</p>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <p class="form-control-static">@Model.Description</p>
            </div>
        </div>
        
        <div class="form-group">
            <label asp-for="CreationDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <p class="form-control-static">@Model.CreationDate</p>
            </div>
        </div>
        
        <div class="form-group">
            <label asp-for="UserName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <p class="form-control-static">@Model.UserName</p>
            </div>
        </div>
    </div>


<div>
    <a asp-action="List">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
